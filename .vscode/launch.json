{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch API",
      "program": "${workspaceRoot}/api/bin/api.js",
      "outFiles": [
        "${workspaceRoot}/api/dist/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Ingester",
      "program": "${workspaceRoot}/ingester/bin/ingester.js",
      "outFiles": [
        "${workspaceRoot}/ingester/dist/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Debug Controller",
      "address": "192.168.2.4",
      "port": 9229,
      "outFiles": [
        "${workspaceRoot}/controller/dist/**/*.js"
      ]
    }
  ]
}
